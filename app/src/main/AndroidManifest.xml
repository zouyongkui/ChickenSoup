<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.one.zyk.chickensoup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".app.SoupApp"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.soup.activity.test" />
        <activity android:name=".ui.soup.activity.WebActivity" />
        <activity android:name=".ui.soup.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.management.ManagementActivity" />
        <activity android:name=".ui.management.CommentManagementActivity" />
        <activity android:name=".ui.soup.activity.TabActivity">

        </activity>
        <activity
            android:name=".ui.soup.activity.PostCommentActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
    </application>

</manifest>